{
  "name": "hospital_soporte",
  "module": "src/server.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --watch run src/server.ts",
    "css:dev": "tailwindcss -i ./src/assets/css/input.css -o ./public/css/output.css --watch",
    "css:build": "tailwindcss -i ./src/assets/css/input.css -o ./public/css/output.css --minify",
    "start": "bun run css:build && bun run src/server.ts"
  },
  "devDependencies": {
    "@types/bun": "^1.3.1",
    "typescript": "^5"
  },
  "dependencies": {
    "@elysiajs/bearer": "^1.4.1",
    "@elysiajs/cookie": "^0.8.0",
    "@elysiajs/html": "^1.4.0",
    "@elysiajs/static": "^1.4.4",
    "@tailwindcss/cli": "^4.1.16",
    "@types/mssql": "^9.1.8",
    "bcrypt": "^6.0.0",
    "elysia": "^1.4.13",
    "eta": "^4.0.1",
    "helmet": "^8.1.0",
    "mssql": "^12.0.0",
    "node-cache": "^5.1.2",
    "tailwindcss": "^4.1.16"
  }
}
